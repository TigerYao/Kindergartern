<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="clickHandler"
            type="com.junbaole.kindergartern.presentation.messagedetail.MessageClickHandler" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.junbaole.kindergartern.presentation.messagedetail.MessageDetailActivity">

        <include
            android:id="@+id/title_bar"
            layout="@layout/titlebar_layout"
            bind:clickHandler="@{clickHandler}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                fresco:placeholderImage="@mipmap/top_nar_touxiang" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/home_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="欢迎您加入成长印记"
                    android:textColor="@color/s_color11"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_content_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_content"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@mipmap/icon_weizhi"
                    android:drawablePadding="3dp"
                    android:text="新中关"
                    android:textColor="@color/s_color2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_content_local"
                    android:layout_marginTop="6dp"
                    android:text="10分钟前"
                    android:textColor="@color/s_color13"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/home_content_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/home_content_local"

                    android:src="@mipmap/icon_dianzan" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
