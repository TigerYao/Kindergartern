<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_dianzan_tc_bg"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/home_content_dianzan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:drawableLeft="@mipmap/icon_dianzan_x"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="点赞"
                android:textColor="@color/s_color16" />

            <TextView
                android:id="@+id/home_conent_pinglun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:drawableLeft="@mipmap/icon_dianzan_pinglun"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="评论"
                android:textColor="@color/s_color16" />
        </LinearLayout>
    </FrameLayout>
</layout>