<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="clickHandler"
            type="com.junbaole.kindergartern.presentation.register.RegisterClickHandler" />
        <variable
            name="isRight"
            type="boolean"/>
        <variable
            name="phoneNum"
            type="String"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <include
            layout="@layout/titlebar_layout"
            bind:clickHandler="@{clickHandler}" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="12dp"
            android:text="请输入四位验证码"
            android:textColor="@color/s_color16"
            android:textSize="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:padding="12dp"
            android:text="@{phoneNum}"
            android:textColor="@color/s_color16"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:text="4位验证码"
            android:textColor="@color/s_color16"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/register_telphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:minHeight="40dp"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLength="4"
                android:textColor="@color/s_color16"
                android:textColorHint="#2d4833"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{isRight?View.VISIBLE:View.GONE}"
                android:src="@mipmap/icon_zhengque" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:background="@color/s_color16" />

        <Button
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:alpha="0.6"
            android:background="@mipmap/button_yellow_z"
            android:onClick="@{clickHandler.onClickNextStep2}"
            android:text="@string/next_step"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>